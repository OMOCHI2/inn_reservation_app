<%= render "shared/search" %>

<div class="container room-container">
  <div class="room-header">
    <%= link_to "← 戻る", :back %>
  </div>

  <div class="room-details">
    <% if @room.avatar.present? %>
      <%= image_tag @room.avatar, class: "room-details-image", alt: "施設画像" %>
    <% else %>
      <%= image_tag "room_default.png",class: "room-details-image", alt: "施設画像" %>
    <% end %>

    <div class="room-details-body">
      <div class="room-details-title">
        <p class="room-details-name"><%= @room.name %></p>
        <p class="room-details-price"><%= @room.price.to_s(:currency) %>~</p>
      </div>
      <p class="room-details-address"><%= @room.address %></p>
      <p class="room-details-introduction"><%= @room.introduction %></p>

      <div class="reservation-form">
        <%= form_with model: Reservation.new, url: confirm_reservations_path, method: :post do |f| %>
          <div class="form-input-container">
            <div class="reservation-form-item">
              <%= f.label :start_date, "チェックイン" %>
              <%= f.date_field :start_date %>
            </div>

            <div class="reservation-form-item">
              <%= f.label :end_date, "チェックアウト" %>
              <%= f.date_field :end_date %>
            </div>

            <div class="reservation-form-item">
              <%= f.label :num_of_people, "人数" %>
              <%= f.number_field :num_of_people %>
            </div>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :user_id, value: @user.id %>
          </div>

          <%= f.submit "予約する", class: "button submit-button reservation-submit-button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>