<div class="form-wrapper">
  <section class="form-container">
    <h2>予約内容の確認</h2>
    <%= form_with model: @reservation do |f| %>
      <div class="reservation-confirm">
        <div class="reservation-confirm-item">
          <p class="reservation-confirm-label">チェックイン</p>
          <p class="reservation-confirm-value"><%= l @reservation.start_date %></p>
        </div>
        <div class="reservation-confirm-item">
          <p class="reservation-confirm-label">チェックアウト</p>
          <p class="reservation-confirm-value"><%= l @reservation.end_date %></p>
        </div>
        <div class="reservation-confirm-item">
          <p class="reservation-confirm-label">日数</p>
          <p class="reservation-confirm-value"><%= (@reservation.end_date - @reservation.start_date).to_i %>日</p>
        </div>
        <div class="reservation-confirm-item">
          <p class="reservation-confirm-label">人数</p>
          <p class="reservation-confirm-value"><%= @reservation.num_of_people %>人</p>
        </div>
        <div class="reservation-confirm-item">
          <p class="reservation-confirm-label">お支払い金額</p>
          <p class="reservation-confirm-value"><%= @reservation.room.price * @reservation.num_of_people * (@reservation.end_date - @reservation.start_date).to_i %>円</p>
        </div>
        <p class="reservation-confirm-description">上記内容で正しければ「確定」ボタンを押してください。</p>
        <%= f.hidden_field :room_id %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :start_date %>
        <%= f.hidden_field :end_date %>
        <%= f.hidden_field :num_of_people %>
      </div>
      <%= f.submit "予約を確定", class: "button submit-button reservation-submit-button" %>
    <% end %>
    <%= link_to "キャンセル", :back, class: "button reservation-cancel-button" %>
  </section>
</div>
