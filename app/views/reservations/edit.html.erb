<div class="form-wrapper">
  <section class="form-container">
    <h2>再予約する</h2>
    <%= render "shared/error_messages_reservation" %>
    <div class="reservation-details">
      <% if @reservation.room.avatar.present? %>
        <%= image_tag @reservation.room.avatar, class: "reservation-details-image", alt: "施設画像" %>
      <% else %>
        <%= image_tag "room_default.png",class: "reservation-detail-image", alt: "施設画像" %>
      <% end %>
      <div class="reservation-details-title">
        <p class="reservation-details-room-name"><%= @reservation.room.name %></p>
        <p class="reservation-details-room-price"><%= @reservation.room.price.to_s(:currency) %>~</p>
      </div>
      <p class="reservation-details-room-address"><%= @reservation.room.address %></p>
      <p class="reservation-details-room-introduction"><%= @reservation.room.introduction %></p>
    </div>

    <%= form_with model: @reservation, url: confirm_reservation_path(@reservation) do |f| %>
      <%= render "shared/error_messages_reservation" %>

      <div class="reservation-form">
        <div class="reservation-form-item-edit">
          <%= f.label :start_date, "チェックイン" %>
          <%= f.date_field :start_date %>
        </div>

        <div class="reservation-form-item-edit">
          <%= f.label :end_date, "チェックアウト" %>
          <%= f.date_field :end_date %>
        </div>

        <div class="reservation-form-item-edit">
          <%= f.label :num_of_people, "人数" %>
          <%= f.number_field :num_of_people %>
        </div>

        <%= f.submit "再予約する", class: "button submit-button reservation-submit-button" %>
      </div>
    <% end %>
    <%= link_to "キャンセル", reservations_path, class: "button reservation-cancel-button" %>
  </section>
</div>