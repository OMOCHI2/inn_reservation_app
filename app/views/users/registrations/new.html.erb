<div class="form-wrapper">
  <div class="form-container">
    <h2 class="form-container-title">新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="account-info-item">
        <%= f.label :name, class: "account-info-label" %>
        <%= f.text_field :name, placeholder: "予約 太郎", class: "account-info-value string-input" %>
      </div>

      <div class="account-info-item">
        <%= f.label :email, class: "account-info-label" %>
        <%= f.email_field :email, placeholder: "abc123@gmail.com", autofocus: true, autocomplete: "email", class: "account-info-value string-input" %>
      </div>

      <div class="account-info-item">
        <%= f.label :password, class: "account-info-label" %>
        <%= f.password_field :password, placeholder: "半角英数字６文字以上", autocomplete: "new-password", class: "account-info-value string-input" %>
      </div>

      <div class="account-info-item">
        <%= f.label :password_confirmation, class: "account-info-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "account-info-value string-input" %>
      </div>

      <div class="button-area">
      <%= link_to "アカウントをお持ちの方はログイン", new_user_session_path, class: "button different-button" %></li>
        <%= f.submit "新しいアカウントを作成", class: "button submit-button" %>
      </div>
    <% end %>
  </div>
</div>
