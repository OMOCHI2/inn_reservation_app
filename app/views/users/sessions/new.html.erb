<div class="form-wrapper">
  <div class="form-container">
    <h2 class="form-container-title">ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="account-info-item">
        <%= f.label :email, class: "account-info-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "account-info-value string-input" %>
      </div>

      <div class="account-info-item">
        <%= f.label :password, class: "account-info-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "account-info-value string-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="account-info-item">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="button-area">
        <%= link_to "新しいアカウントを作成", new_user_registration_path, class: "button different-button" %>
        <%= f.submit "ログイン", class: "button submit-button" %>
      </div>
    <% end %>
  </div>
</div>
