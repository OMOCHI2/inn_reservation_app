<section class="show-section">
  <h2 class="show-page-title">設定</h2>
  <div class="show-container">
    <ul class="side-nav">
      <li class="side-nav-item"><%= link_to "アカウント", user_path(@user) %></li>
      <li class="side-nav-item"><%= link_to "プロフィール", profile_user_path(@user) %></li>
    </ul>
    <div class="account-info">
      <div class="account-info-header">
        <h3>プロフィール</h3>
        <%= link_to "編集", edit_user_path(@user), class: "button account-info-link" %>
      </div>
      <%= form_with model: @user do |f| %>
        <div class="account-info-item">
          <label class="account-info-label">アイコン画像</label>
          <%= f.file_field :avatar, class: "account-info-value file-input" %>
        </div>
        <div class="account-info-item">
          <label class="account-info-label">名前</label>
          <%= f.text_field :name, class: "account-info-value string-input", value: "#{@user.name}" %>
        </div>
        <div class="account-info-item">
          <label class="account-info-label">自己紹介</label>
          <%= f.text_area :introduction, class: "account-info-value introduction-input", value: "#{@user.introduction}" %>
        </div>
        <div class="button-area">
          <%= link_to "キャンセル", profile_user_path(@user), class: "button cancel-button" %>
          <%= f.submit "保存", class: "button submit-button" %>
        </div>
      <% end %>
    </div>
  </div>
</section>